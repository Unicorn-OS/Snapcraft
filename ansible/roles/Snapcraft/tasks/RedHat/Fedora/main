---
- name: Enable snapd
  ansible.builtin.dnf:
    name:
      - snapd
    state: latest
  become: true
  notify: reboot os
  # Reboot required for Fedora

- name: Enable classic snap support
  ansible.builtin.file:
    src: /var/lib/snapd/snap
    dest: /snap
    state: link
  become: true

# https://snapcraft.io/install/snapcraft/fedora
